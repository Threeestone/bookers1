<div>
 <%= flash[:notice] %>
</div>

<html>
<body>
 <p id="notice"></p>
 <h1>Books</h1>
 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th
    <th colspan="3"></th>
   </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>

   　 <td><%= link_to "Show",book_path(book.id) %></td>
　   <td><%= link_to "Edit", edit_book_path(book.id) %></td>
　   <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "*DELETE* Are you sure?" %></td>
　  </tr>
   <% end %>

  </tbody>
 </table>

 <h2>New book</h2>

 <%= form_with model: @book, method: :post do |f| %>
  <div class="title">
   <h4>Title</h4>
   <%= f.text_field :title %>
  </div>
  <div class="body">
   <h4>Body</h4>
   <%= f.text_field :body %>
  </div>
  <div class="submit">
   <%= f.submit 'submit' %>
  </div>
 <% end %>

 <%if @book.errors.any? %>
  <%= @book.errors.count %> :error counted. Please fill in the blank.
   <ul>
    <%@book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>

 </form>
</body>
</html>
